const http = require('http');

const server = http.createServer( (req, res) => {
    if(req.method === 'GET' && req.url === '/nick'){
        res.write('Nick info');
        res.end();

        return;
    }
    if(req.url === '/nick/:id'){
        res.write('Hey nick');
        res.end();
    }
    req.pipe(res);
});

server.listen(3000, 'localhost', () => {
    console.log('Listen server on port 3000');
});